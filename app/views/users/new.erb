<h2 class="text-c">Register a new Account!</h2>

<% if @errors %>
  <%= erb :"_errors", locals: { errors: @errors } %>
<% end %>

<form method="POST" action="/users">
  <input class="block w-70 mar-t-2 mar-b-2 pad-1 center" type="text" name="user[username]" placeholder="username">
  <input class="block w-70 mar-t-2 mar-b-2 pad-1 center" type="text" name="user[email]" placeholder="Email">
  <input class="block w-70 mar-t-2 mar-b-2 pad-1 center" type="password" name="user[password]" placeholder="Password">

  <input class="block w-70 mar-t-2 mar-b-3 pad-2 round-1 text-c submit center" type="submit" value="Register">
</form>
